{
  "name": "bb-downloader",
  "version": "6.0.2",
  "description": "Local music downloader with Python backend",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "setup-python": "pip install -r requirements.txt",
    "start-api": "python api_server.py",
    "start-worker": "python worker.py",
    "dev": "concurrently \"npm run start-api\" \"npm run start\"",
    "build": "npm run dist",
    "download-ffmpeg": "node scripts/download-ffmpeg.js",
    "prebuild": "npm run check-dependencies",
    "check-dependencies": "node scripts/check-dependencies.js",
    "bundle-python": "node scripts/create-pyinstaller-bundle.js",
    "bundle-full": "node scripts/create-bundle.js",
    "build-mac": "npm run bundle-python && npm run dist",
    "installer": "node scripts/create-complete-installer.js"
  },
  "keywords": [
    "music",
    "downloader",
    "youtube",
    "spotify",
    "soundcloud"
  ],
  "author": {
    "name": "Matthias Holetzko",
    "email": "mholetzko@gmx.net"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "semver": "^7.7.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.yourname.bb-downloader",
    "productName": "bB Downloader",
    "directories": {
      "output": "dist"
    },
    "icon": "src/assets/icons/icon.png",
    "files": [
      "src/**/*",
      "api_server.py",
      "database.py",
      "requirements.txt",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "api_server.py",
        "to": "api_server.py"
      },
      {
        "from": "database.py",
        "to": "database.py"
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "ffmpeg",
        "to": "ffmpeg"
      },
      {
        "from": "dist/bb-downloader-api",
        "to": "bb-downloader-api"
      },
      {
        "from": "src/assets/icons",
        "to": "icons"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Audio"
    }
  }
}
